""""""

# 
scores= []

# 
while True:
    try:
        score = int(input("Enter a score, or type 'done' to exit: "))
        if score == "done":
            break
        elif score > 0:
            scores.append(score)
        else:
            print("Please type a postivie number.")
    except ValueError:
        print("Invlaid score!")

# 